@{
    ViewBag.Title = "MyRewardList";
    //This view shows the purchases of the user.
}
@using Resource = sGridServer.Resources.CoinExchange.MyRewardList
@model IEnumerable<Purchase>
@if (Model.Count() == 0)
{
    <p><b style="color: #5c6b72">@Resource.NoRewards</b></p>
}
<div class = "sg_list_text">
            <div class = "sg_list_text" style = "width: 40px;"></div>
            <div class = "sg_list_text" style = "width: 100px;"><b style="color: #5c6b72">@Resource.Name</b></div> 
            <div class = "sg_list_text" style = "width: 80px;"><b style="color: #5c6b72">@Resource.Amount</b></div>
            <div class = "sg_list_text" style = "width: 200px;"><b style="color: #5c6b72">@Resource.Timestamp</b></div>
            <div class = "sg_list_text" style = "width: 150px;"><b style="color: #5c6b72">@Resource.URL</b></div>
        </div>
<div style = "width : 700px">
@foreach (Purchase item in Model)
{
    <div class = "sg_list_row">
        
       <div class = "sg_list_image">
           @if (item.Reward.Picture != null && item.Reward.Picture != "")
           {
               <a href = "@Url.Action("Detail", new { id = item.Id })">
                   <img src = "@Url.Content(item.Reward.Picture)" class = "sg_list_image" alt = "@Resource.Picture"/>
               </a>
           }        
        </div>
        <div class = "sg_list_text">
            <div class = "sg_list_text" style = "width: 100px;"><b>@item.Reward.Name</b></div> 
            <div class = "sg_list_text" style = "width: 80px; background-color: #f3f8fa">@item.Amount</div>
            <div class = "sg_list_text" style = "width: 200px;">@item.Timestamp</div>
            <div class = "sg_list_text" style = "width: 150px; background-color: #f3f8fa"><a href = "@item.Reward.URL">@item.Reward.URL</a></div>
        </div>
    </div>       
}
</div>
