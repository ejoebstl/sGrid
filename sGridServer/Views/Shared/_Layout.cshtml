<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/jquery.jgrowl.css")
    @Styles.Render("~/Content/themes/base/jquery-ui-1.10.0.custom.css")
    @Styles.Render("~/Content/Form.css")
    @Styles.Render("~/Content/sgrid.ui.css")
    @Styles.Render("~/Content/sgrid.layout.css")
    @Styles.Render("~/Content/sgrid.forms.css")
    @Styles.Render("~/Content/jPaginator.css")
    @Styles.Render("~/Content/css/uniform.default.css")
</head>
<body>
    @Scripts.Render("~/Scripts/jquery-1.9.0.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.10.0.custom.js")
    @Scripts.Render("~/Scripts/jquery-ui.custom.js")
    @Scripts.Render("~/Scripts/jquery.ui.accordion.js")
    @Scripts.Render("~/Scripts/jquery.ui.button.js")
    @Scripts.Render("~/Scripts/jquery.ui.datepicker.js")
    @Scripts.Render("~/Scripts/jquery.ui.datepicker-de-DE.js")
    @Scripts.Render("~/Scripts/jquery.ui.datepicker-en-EN.js")
    @Scripts.Render("~/Scripts/jquery.ui.menu.js")
    @Scripts.Render("~/Scripts/jquery.ui.progressbar.js")
    @Scripts.Render("~/Scripts/jquery.ui.tooltip.js")        
    @Scripts.Render("~/Scripts/jquery.ui.core.js")
    @Scripts.Render("~/Scripts/jquery.ui.position.js")
    @Scripts.Render("~/Scripts/jquery.ui.widget.js")
    @Scripts.Render("~/Scripts/jquery.ui.tabs.js")
    @Scripts.Render("~/Scripts/jquery.ui.dialog.js")
    @Scripts.Render("~/Scripts/jquery-migrate-1.1.0.js")
    @Scripts.Render("~/Scripts/jquery.jgrowl.js")
    @Scripts.Render("~/Scripts/jPaginator.js")
    @Scripts.Render("~/Scripts/jquery.validate.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.js")
    @Scripts.Render("~/Scripts/jquery.uniform.js")
    @Scripts.Render("~/Scripts/bindsubmit.js")
    @Scripts.Render("~/Scripts/raphael.js")
    @Scripts.Render("~/Scripts/g.raphael.js")
    @Scripts.Render("~/Scripts/g.line.js")
    @Scripts.Render("~/Scripts/g.bar.js")
    @Scripts.Render("~/Scripts/Highcharts/highstock.js")
    @Scripts.Render("~/Scripts/Highcharts/modules/exporting.js")

    @RenderSection("scripts", required: false)
    @Html.Action("ScriptSection", "MasterPage", null)
    <div id="top_layout_container">
        <div style="height:35px;">
            <div id="sg_header_left"></div>
            <div id="sg_header_section">
                <div id="sg_banner_container">
                    @Html.Action("BannerPart", "MasterPage", null)
                </div>
                <ul>
                    @Html.Action("LoginPart", "MasterPage", null)
                    @Html.Action("LanguageSelection", "MasterPage", null)
                </ul>
            </div> 
        </div>
        <div id="sg_menu_inner_container" style="height:35px;">
            <div id="sg_menu_logo"></div>
            <div id="sg_main_menu_section" style="float:left">
                @Html.Action("MainMenu", "MasterPage", null)
            </div>       
        </div>
        <div style="height:35px; clear:both;">
            <div id="sg_header_right"></div>
            <div id="sg_header_section_bottom">
                @Html.Action("SubMenu", "MasterPage", null)
            	<div id="sg_menu_box" style="margin-top: -50px; margin-bottom: -30px; margin-right: -18px; float: right;">
                    @Html.Action("AccountBalance", "MasterPage", null)
                </div>      
            </div>
        </div>
    </div>   
    <div id="global_container">
        <div id="sg_content">
            @RenderBody()
        </div>
    </div>
    <div id="sg_footer_container">
        <div id="sg_footer">
            @Html.Action("Footer", "MasterPage", null)
        </div>
    </div>
</body>
</html>
